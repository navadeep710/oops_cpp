#include<iostream>
using namespace std;
int main(){
    try{
        int age=15;
        if(age>=18){
            cout<<"Valid Age"<<endl;
        }
        else{
            throw(age);
        }
    }
    catch(int myage){
        cout<<"Access denied"<<endl;
        cout<<"Your age is :"<<myage<<endl;
    }
    return 0;
}
